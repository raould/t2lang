{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "T2: Compile to TypeScript (t2tc)",
      "type": "shell",
      "command": "node",
      "args": [
        "${workspaceFolder}/phase1/dist/cli.js",
        "${file}"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": {
        "owner": "t2",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.+?):(\\d+):(\\d+):\\s*(error|warning):\\s*(.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    {
      "label": "T2: Compile to JavaScript (t2jc)",
      "type": "shell",
      "command": "node",
      "args": [
        "${workspaceFolder}/common/dist/t2jc.js",
        "${file}"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": {
        "owner": "t2",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.+?):(\\d+):(\\d+):\\s*(error|warning):\\s*(.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    {
      "label": "T2: Compile Current File on Save",
      "type": "shell",
      "command": "node",
      "args": [
        "${workspaceFolder}/phase1/dist/cli.js",
        "${file}"
      ],
      "group": "build",
      "presentation": {
        "reveal": "never",
        "panel": "shared",
        "showReuseMessage": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": {
        "owner": "t2",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.+?):(\\d+):(\\d+):\\s*(error|warning):\\s*(.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    }
  ]
}
